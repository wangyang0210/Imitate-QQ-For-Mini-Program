/* pages/contact/contact.wxss */
@import "../common/index.wxss";
.serach {
  margin-top: 18rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  padding-left: 25rpx;
  background-color: #f3f3f3;
  border-radius: 12rpx;
}

.serach_view_show {
  color: #808080;
  padding-left: 285rpx;
  font-size: 18rpx;
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  /* margin-left: 68rpx;
  margin-bottom: 13rpx;
  margin-top: 13rpx;
  margin-right: 72rpx;
  background-color: #fff; */
}
.item-left{
    margin-top: 10rpx;
    display:table-cell;
}
.item-middle{
    flex: 1;
    margin-top: 10rpx;
    display:table-cell;

}
.item_right{
    display: block;
    margin-top: 10rpx;

}
.text{
  color: #000000;
  font-family:"微软雅黑";
  font-weight:bold;
  line-height: 10rpx;
  font-size: 22rpx;
  padding-left: 10rpx;
}
.text-middle{
  color: #000000;
  font-family:"微软雅黑";
  font-weight:bold;
  line-height: 10rpx;
  font-size: 22rpx;
  padding-left: 17rpx;
}
.image{
    width: 88rpx; 
    height: 88rpx;
    border-radius: 44rpx; 
    background-color: #eeeeee;
}
.tree_image{
    width: 24rpx; 
    height: 24rpx;
    background-color: #ffffff;
}
.line{
    margin-top:5px;
    height:16rpx;
    width:100%;
    background-color:#F8F9FA;

}
.message {
  font-family: "微软雅黑";
  color: #808080;
  line-height: 10rpx;
  font-size: 26rpx;
  /* padding: 0 16rpx, 0, 16rpx; */
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis; /**文字隐藏后添加省略号*/
  white-space: nowrap; /**强制不换行*/
}
.message_list{
  display: flex;
  background-color: #f2f2f2;
  margin-bottom: 15px;
}
.item-tree {
  margin-top: 7rpx;
  margin-bottom: 7px;
}
.big-title {
  color:#000000;
  font-family:"微软雅黑";
  font-size:30rpx;
  font-weight:500;
  height:30px;
}
.title{
  color: #000000;
  font-family:"微软雅黑";
  font-size:22rpx;
  height:48rpx;
  /* padding-left: 30rpx; */
}
.time{
    position: absolute;
    right: 15rpx;
    color:#808080;
    font-size: 18rpx;
    text-align: right center ;
}
.item-tree-middle{
    margin-top: 15rpx;
    text-align: center;
}
.line-narrow{
    height: 1px;
    width:100%;
    background-color: #E0E1E2;
}
.left-10{
  margin-left: 10px;
}
